</head>
<body>
  
  <ons-page>

  <ons-tabbar swipeable position="auto">
    <ons-tab page="tab1.html" label="Home" icon="md-home" active>
    </ons-tab>
    <ons-tab page="tab2.html" label="Search" icon="md-search">
    </ons-tab>
    <ons-tab page="tab3.html" label="Notification" icon="md-notifications"></ons-tab>
    <ons-tab page="tab4.html" label="Profile" icon="md-face"></ons-tab>
  </ons-tabbar>
</ons-page>

<template id="tab1.html">
  <ons-page id="Tab1">
  	<ons-toolbar>

    <div class="left">
    	<ons-toolbar-button style="color: gray">Footwear</ons-toolbar-button>
    </div>
    <div class="center">
    	<ons-toolbar-button style="color: gray">Apparel</ons-toolbar-button>
    </div>
    <div class="right">
    	<p style="text-align: right; margin-top: 10px;">
    	<ons-search-input
      		placeholder="Search"
     		onchange="ons.notification.alert('Searched for: ' + this.value)"
